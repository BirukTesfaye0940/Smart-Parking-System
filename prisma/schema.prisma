generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id         Int      @id @default(autoincrement())
  firstName  String
  lastName   String
  email      String   @unique
  password   String
  phone      String
  createdAt  DateTime @default(now())
}

model User {
  id         Int      @id @default(autoincrement()) // user_id
  firstName  String
  lastName   String
  email      String   @unique
  password   String
  phone      String
  createdAt  DateTime @default(now())
}

model Owner {
  id         Int      @id @default(autoincrement()) // owner_id
  firstName  String
  lastName   String
  email      String   @unique
  password   String
  phone      String
  createdAt  DateTime @default(now())
}
